{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "public" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/index.php",
        "headers": { "Content-Type": "text/html" }
      },
      {
        "src": "/assets/(.*)",
        "dest": "/public/assets/$1"
      },
      {
        "src": "/picture/(.*)",
        "dest": "/public/picture/$1"
      }
    ]
  }
